<h3>Crop Photo</h3>

<%= image_tag current_user.photo_url(:large).to_s, id:'cropbox' %>

<h4>Preview</h4>

<div style="width:304px; height: 304px; overflow: hidden">
  <%= image_tag current_user.photo_url(:large).to_s, id: 'preview' %>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, multipart: true }) do |f| %>

  <% %w[x y w h].each do |attribute| %>
    <%= f.text_field "crop_#{attribute}" %><br>
  <% end %>
  <%= f.submit "Save", class: 'btn btn-default green-button' %>

<% end %>
