<!DOCTYPE html>
<html>
<head>
  <title>Driverhunt</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body class="<%= controller_name %> <%= action_name %>">

<section class="header">
  <div class="pp-container">
    <%= image_tag 'pp-logo.png', class: 'pp-logo' %>
    <div id="top-menu">
      <div class="input-group input-group-sm">
        <input type="text" class="form-control" placeholder="Search">
        <span class="input-group-btn">
          <button class="btn btn-default" type="button"><i class="glyphicon glyphicon-search"></i></button>
        </span>
      </div><!-- /input-group -->


      <ul>
        <li>
          <%= link_to "Post Project", post_project_path %>
        </li>
        <li>
          <%= link_to "Find Freelancers", drivers_path %>
        </li>
        <li>
          <%= link_to "Browse Projects", jobs_path %>
        </li>
        <li>
          <%= link_to "Help", help_path %>
        </li>
      </ul>
      <div id="top-menu-right"></div>
    </div>
    <div id="second-menu">
      <ul>
        <li>
          <%= link_to "My Projects", dashboard_path %>
        </li>
        <li>
          <%= link_to "Profile", user_path(current_user.username.downcase) %>
        </li>
        <li>
          <%= link_to "Inbox", chat_path %>
        </li>
      </ul>
    </div>
  </div>
  

</section>
<div class="buffer"></div>



<div class="pp-container">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <%= yield %>
</div>

<!-- Footer -->

<section id="footer">
  
  <!-- Counter -->

  <section id="counter">
    <div class="counter-left"></div>
    <div class="container">
      <div class="row">
        <div class="col-sm-4">
          <h1>23,776</h1>
          <p>Users Online</p>
        </div>
        <div class="col-sm-4">
          <h1>14,229,454</h1>
          <p>Users</p>
        </div>
        <div class="col-sm-4">
          <h1>6,986,530</h1>
          <p>Projects</p>
        </div>
      </div>
    </div>
  </section>

  <div class="pp-container">
    <div class="row">
      <div class="col-sm-2 col-sm-push-1">Find freelancers</div>
      <div class="col-sm-2 col-sm-push-1">Freelance projects</div>
      <div class="col-sm-2 col-sm-push-1">Freelance jobs</div>
      <div class="col-sm-2 col-sm-push-1">Freelance contests</div>
      <div class="col-sm-2 col-sm-push-1">Hire Freelancers</div>
    </div>
    <div class="row">
      <div class="com-sm-2 col-sm-push-5">Freelance work</div>
      
    </div>
    <div class="row">
      Copyright 2015
    </div>
  </div>

</section>

</body>
</html>
